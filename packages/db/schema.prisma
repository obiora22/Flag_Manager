generator client {
  provider = "prisma-client"
  output   = ".prisma/generated"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum RoleType {
  VIEWER
  EDITOR
  ADMIN
}

enum ReturnValueType {
  BOOLEAN
  NUMBER
  STRING
  JSON
}

enum FlagEnvironmentType {
  DEVELOPMENT
  STAGING
  PRODUCTION
}

model AuditLog {
  id        String   @id @default(uuid())
  projectId String
  flag      Flag?    @relation(fields: [flagId], references: [id])
  flagId    String?
  actor     String // user-id or system
  action    String // "create_flag", "update_rules", "toggle_env", ...
  payload   Json
  createdAt DateTime @default(now())
}

model User {
  id        String    @id @default(uuid())
  email     String
  name      String
  role      RoleType
  projects  Project[]
  createdAt DateTime  @default(now())
}

model Project {
  id        String   @id @default(uuid())
  name      String
  slug      String   @unique
  users     User[]
  flags     Flag[]
  createdAt DateTime @default(now())
}

model Flag {
  id              String            @id @default(uuid())
  key             String
  description     String?
  rules           Json
  returnValueType ReturnValueType
  defaultValue    Json
  archived        Boolean           @default(false)
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  project         Project           @relation(fields: [projectId], references: [id])
  projectId       String
  environments    FlagEnvironment[]
  audits          AuditLog[]

  @@unique([projectId, key])
}

model FlagEnvironment {
  id          String              @id @default(uuid())
  environment FlagEnvironmentType
  overrides   Json // environment-specific override: defaultValue or rules
  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @updatedAt
  featureFlag Flag                @relation(fields: [flagId], references: [id])
  flagId      String
}
