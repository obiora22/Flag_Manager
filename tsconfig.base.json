{
  "compilerOptions": {
    "typeRoots": ["node_modules/@types", "./types/fastify"],
    "strict": true,
    "module": "esnext",
    "target": "es2022",
    "skipLibCheck": true,
    "allowJs": false,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "emitDeclarationOnly": false,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "baseUrl": ".",
    "paths": {
      "@admin/*": ["./apps/admin/*"],
      "@api/*": ["./apps/api/*"],
      "@db/*": ["./packages/db/*"],
      "@schema/*": ["./packages/schema/*"],
      "@repo/*": ["./*"]
    }
  },
  "include": ["./**/*.ts", "./types/**/*.ts"],
  "exclude": ["node_modules"]
}
