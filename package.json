{
  "name": "flag_manager",
  "version": "1.0.0",
  "type": "module",
  "description": "Feature-flag management system and SDK.",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:api": "npm --workspace apps/api run dev",
    "dev:admin": "npm --workspace apps/admin run dev",
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:admin\"",
    "build": "npm -ws run build",
    "build:api": "npm --workspace apps/api run build",
    "build:admin": "npm --workspace apps/admin run build",
    "prisma:generate": "npm --workspace packages/db run generate",
    "prisma:migrate": "npm --workspace packages/db run migrate",
    "prisma:db:push": "npm --workspace packages/db run push",
    "prisma:db:seed": "npm --workspace packages/db run seed"
  },
  "author": "O. Anaedozie",
  "license": "ISC",
  "dependencies": {
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "eslint": "^9.8.0",
    "prettier": "^2.6.2",
    "ts-jest": "^29.4.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.40.0"
  }
}
