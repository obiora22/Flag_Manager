{
  "name": "flag_manager",
  "version": "1.0.0",
  "type": "module",
  "description": "Feature-flag management system and SDK.",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:api": "npm --workspace apps/api run dev",
    "dev:admin": "npm --workspace apps/admin run dev",
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:admin\"",
    "build": "npm -ws run build",
    "build:api": "npm --workspace apps/api run build",
    "build:admin": "npm --workspace apps/admin run build",
    "prisma:generate": "npm --workspace db run generate",
    "prisma:migrate": "npm --workspace db run migrate"
  },
  "author": "O. Anaedozie",
  "license": "ISC",
  "dependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tslib": "^2.3.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "dotenv": "^17.2.3",
    "dotenv-cli": "^11.0.0",
    "eslint": "^9.8.0",
    "prettier": "^2.6.2",
    "prisma": "^6.19.0",
    "ts-jest": "^29.4.0",
    "ts-node": "10.9.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.40.0"
  },
  "nx": {}
}
